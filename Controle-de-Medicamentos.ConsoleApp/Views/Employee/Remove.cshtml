@using Controle_de_Medicamentos.ConsoleApp.EmployeeModule
@{
    Employee s = ViewBag.Employee;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remover Funcionário - Controle de Medicamentos</title>
</head>

<body>
    <h1>Controle de Medicamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/employees/add">Cadastrar novo funcionário</a> /
    <a href="/employees/show">Visualizar funcionários</a>

    <hr />

    <h3>Remover Funcionário</h3>

    <p>Você tem certeza que deseja excluir o registro "@s.Name"?</p>

    <form action="/employees/remove/@s.Id" method="post">
        <button type="submit">Confirmar</button>
        <a href="/employees/show">Voltar</a>
    </form>
</body>
</html>
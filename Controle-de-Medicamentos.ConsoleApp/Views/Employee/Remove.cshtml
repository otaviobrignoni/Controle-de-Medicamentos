@using Controle_de_Medicamentos.ConsoleApp.Models
@model RemoveEmployeeViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remover Funcionário - Controle de Medicamentos</title>
</head>

<body>
    <h1>Controle de Medicamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/employee/add">Cadastrar novo funcionário</a> /
    <a href="/employee/show">Visualizar funcionários</a>

    <hr />

    <h3>Remover Funcionário</h3>

    <p>Você tem certeza que deseja excluir o registro "@Model.Name"?</p>

    <form action="/employee/remove/@Model.Id" method="post">

@using Controle_de_Medicamentos.ConsoleApp.PatientModule
@{
    Patient s = ViewBag.Patient;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remover Paciente - Controle de Medicamentos</title>
</head>

<body>
    <h1>Controle de Medicamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/patients/add">Cadastrar novo paciente</a> /
    <a href="/patients/show">Visualizar pacientees</a>

    <hr />

    <h3>Remover Paciente</h3>

    <p>Você tem certeza que deseja excluir o registro "@s.Name"?</p>

    <form action="/patients/remove/@s.Id" method="post">
        <button type="submit">Confirmar</button>
        <a href="/patients/show">Voltar</a>
    </form>
</body>
</html>
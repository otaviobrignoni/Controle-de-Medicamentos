@using Controle_de_Medicamentos.ConsoleApp.Models
@model EditPatientViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Editar Paciente - Controle de Medicamentos</title>
</head>

<body>
    <h1>Controle de Medicamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/patients/add">Cadastrar novo paciente</a> /
    <a href="/patients/show">Visualizar pacientes</a>

    <hr />

    <h3>Editar Paciente</h3>

    <form action="/patients/edit/@Model.Id" method="post">
        <label>Nome do paciente:</label>
        <br />
        <input type="text" name="name" value="@Model.Name" />

        <br />

        <label>Telefone do paciente:</label>
        <br />
        <input type="text" name="phoneNumber" value="@Model.PhoneNumber" />

        <br />

        <label>Cartão SUS do paciente:</label>
        <br />
        <input type="text" name="susCard" value="@Model.SUSCard" />
        <hr />

        <button type="submit">Gravar</button>
    </form>
</body>
</html>

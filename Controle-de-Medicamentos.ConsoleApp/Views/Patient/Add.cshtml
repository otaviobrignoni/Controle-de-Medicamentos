@using Controle_de_Medicamentos.ConsoleApp.Models
@model AddPatientViewModel;
@{
    ViewBag.Title = "Cadastrar Paciente";
}
<header>
    <h3>Cadastrar Paciente</h3>
</header>

<main>
    <div class="form-container">
        <form action="/patient/add" method="post">
            <label>Nome do paciente:</label>
            <input type="text" name="name" />

            <label>Telefone do paciente:</label>
            <input type="text" name="phoneNumber" />


            <label>Cartão SUS do paciente:</label>
            <input type="text" name="susCard" />

            <div class="button-group">
                <a type="button" class="button" id="backButton" href="/patient/show">Voltar</a>
                <button type="submit" class="button" id="confirmButton">Confirmar</button>
            </div>
        </form>
    </div>
</main>
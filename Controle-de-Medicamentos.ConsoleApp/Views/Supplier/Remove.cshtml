@using Controle_de_Medicamentos.ConsoleApp.Models
@model RemoveSupplierViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remover Fornecedor - Controle de Medicamentos</title>
</head>

<body>
    <h1>Controle de Medicamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/supplier/add">Cadastrar novo fornecedor</a> /

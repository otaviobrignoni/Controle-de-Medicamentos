@using Controle_de_Medicamentos.ConsoleApp.SupplierModule
@{
    Supplier s = ViewBag.Supplier;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remover Fornecedor - Controle de Medicamentos</title>
</head>

<body>
    <h1>Controle de Medicamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/suppliers/add">Cadastrar novo fornecedor</a> /
    <a href="/suppliers/show">Visualizar fornecedores</a>

    <hr />

    <h3>Remover Fornecedor</h3>

    <p>Você tem certeza que deseja excluir o registro "@s.Name"?</p>

    <form action="/suppliers/remove/@s.Id" method="post">
        <button type="submit">Confirmar</button>
        <a href="/suppliers/show">Voltar</a>
    </form>
</body>
</html>
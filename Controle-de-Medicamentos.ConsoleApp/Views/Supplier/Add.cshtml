@using Controle_de_Medicamentos.ConsoleApp.Models
@model AddSupplierViewModel;
@{
    ViewBag.Title = "Cadastrar Fornecedor";
}
<header>
    <h3>Cadastrar Fornecedor</h3>
</header>

<main>
    <div class="form-container">
        <form action="/supplier/add" method="post">
            <label>Nome do fornecedor:</label>
            <input type="text" name="name" />

            <label>Telefone do fornecedor:</label>
            <input type="text" name="phoneNumber" />


            <label>CNPJ do fornecedor:</label>
            <input type="text" name="cnpj" />

            <div class="button-group">
                <button type="submit" class="button" id="confirmButton">Confirmar</button>
                <a type="button" class="button" id="backButton" href="/supplier/show">Voltar</a>
            </div>
        </form>
    </div>
</main>
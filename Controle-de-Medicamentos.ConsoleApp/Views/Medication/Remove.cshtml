@using Controle_de_Medicamentos.ConsoleApp.Models
@model RemoveMedicationViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remover Medicamento - Controle de Medicamentos</title>
</head>

<body>
    <h1>Controle de Medicamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/medication/add">Cadastrar novo medicamento</a> /
    <a href="/medication/show">Visualizar medicamentos</a>

    <hr />

    <h3>Remover Medicamento</h3>

    <p>Você tem certeza que deseja excluir o registro "@Model.Name"?</p>

    <form action="/medication/remove/@Model.Id" method="post">
        <button type="submit">Confirmar</button>
        <a href="/medication/show">Voltar</a>
    </form>
</body>
</html>
